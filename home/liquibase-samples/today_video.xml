<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet for creating TodayVideo table -->
    <changeSet id="1" author="yourname">
        <createTable tableName="today_video">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="release_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create a table to hold the set of video IDs related to TodayVideo -->
        <createTable tableName="today_video_video_ids">
            <column name="today_video_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_today_video" references="today_video(id)"/>
            </column>
            <column name="video_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create an index on today_video_id for better performance -->
        <createIndex indexName="idx_today_video_id" tableName="today_video_video_ids">
            <column name="today_video_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
